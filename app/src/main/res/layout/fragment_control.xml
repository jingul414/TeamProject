<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFF2"
    tools:context=".screen.setting.SettingActivity">

    <TextView
        android:id="@+id/head_text"
        style="@style/common_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="10dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="250dp"
        android:text="@string/companion_list"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/nav_line"
        android:layout_width="409dp"
        android:layout_height="2dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/login_view_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 동행인 목록 -->
    <LinearLayout
        android:id="@+id/user_list_container1"
        android:layout_width="350dp"
        android:layout_height="96dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:padding="10dp"
        android:background="@drawable/item_background"
        app:layout_constraintTop_toBottomOf="@id/nav_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/profileImage1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/image_rounded_shape"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/user_image" />

        <TextView
            android:id="@+id/nameText1"
            style="@style/setting_head_text"
            android:text="@string/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/profileImage"
            android:layout_weight="1"
            android:textSize="35sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/arrowIcon1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_down"
            app:tint="#FF8A80" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_list_container2"
        android:layout_width="350dp"
        android:layout_height="96dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:padding="10dp"
        android:background="@drawable/item_background"
        app:layout_constraintTop_toBottomOf="@id/user_list_container1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="7dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/profileImage2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/image_rounded_shape"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/user_image" />

        <TextView
            android:id="@+id/nameText2"
            style="@style/setting_head_text"
            android:text="@string/user_name2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/profileImage"
            android:layout_weight="1"
            android:textSize="35sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/arrowIcon2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_down"
            app:tint="#FF8A80" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFF6CF"
        app:itemIconSize="55dp"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextAppearanceActive="@style/BottomNavTextStyle"
        app:itemTextAppearanceInactive="@style/BottomNavTextStyle"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:itemHorizontalTranslationEnabled="false"
        app:menu="@menu/bottom_nav_menu" />

    <!-- 제어 패널 -->
    <include
        android:id="@+id/controlPanel"
        layout="@layout/item_control_panel"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/user_list_container1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>