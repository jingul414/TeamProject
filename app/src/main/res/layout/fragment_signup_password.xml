<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_signup_step1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFF2">

    <TextView
        android:id="@+id/signup_text_password_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/text_set_password"
        style="@style/common_text"
        android:gravity="top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"/>

    <EditText
        android:id="@+id/signup_edit_password"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_border"
        android:paddingHorizontal="20dp"
        style="@style/common_input"
        android:hint="@string/login_text_password"
        android:autofillHints="비밀번호"
        app:layout_constraintTop_toBottomOf="@+id/signup_text_password_notification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"/>

    <EditText
        android:id="@+id/signup_edit_password_check"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_border"
        android:paddingHorizontal="20dp"
        style="@style/common_input"
        android:hint="@string/input_password_valid"
        android:autofillHints="비밀번호"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_edit_password"/>

    <TextView
        android:id="@+id/signup_text_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/warning_password_valid"
        style="@style/common_warning"
        android:gravity="top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_edit_password_check"/>

    <Button
        android:id="@+id/signup_btn_next"
        style="@style/common_btn"
        android:text="@string/withme_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="#FE7363"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_text_warning"/>


</androidx.constraintlayout.widget.ConstraintLayout>