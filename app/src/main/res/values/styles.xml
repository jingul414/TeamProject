        <item name="colorButtonNormal">#FE7363</item>
        <item name="android:lineSpacingExtra">12sp</item> <!-- 줄 간격 추가 -->
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:fontFamily">@font/noto_sans_black</item>
    </style>

    <style name="login_text_set_password">
        <item name="android:textColor">#5A5A5A</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">12sp</item> <!-- 줄 간격 추가 -->
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:fontFamily">@font/noto_sans_black</item>
    </style>

    <style name="login_text_find_password">
        <item name="android:textColor">#5A5A5A</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">12sp</item> <!-- 줄 간격 추가 -->
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:fontFamily">@font/noto_sans_black</item>
    </style>

    <!-- Signup -->
    <style name="signup_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:lineSpacingExtra">4sp</item> <!-- 추가적인 줄 간격 -->
        <item name="android:lineSpacingMultiplier">1.2</item> <!-- 줄 간격 배율 -->
        <item name="android:fontFamily">@font/noto_sans_black</item>
    </style>
    <!-- Select -->
    <style name="select_text">
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:lineSpacingExtra">4sp</item> <!-- 추가적인 줄 간격 -->
        <item name="android:lineSpacingMultiplier">1.2</item> <!-- 줄 간격 배율 -->
    </style>

    <!-- Setting-->
    <style name="setting_head_text">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/noto_sans_black</item>
    </style>
    <style name="control_scan_text">
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:lineSpacingExtra">4sp</item> <!-- 추가적인 줄 간격 -->
        <item name="android:lineSpacingMultiplier">1.2</item> <!-- 줄 간격 배율 -->
    </style>

    <style name="setting_body_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/noto_sans_black</item>
    </style>

    <style name="user_name">
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">@font/noto_sans_black</item>
    </style>

    <!-- Leave -->
    <style name="leave_alert_text">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/noto_sans_black</item>
    </style>

    <!-- Controller Main1 -->

    <!-- Navigation -->
    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- 아이콘 크기 조절 -->
        <item name="itemIconSize">42dp</item>
        <!-- 선택된 메뉴의 텍스트 크기 설정 -->
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active</item>
        <!-- 선택되지 않은 메뉴의 텍스트 크기 설정 -->
        <item name="itemTextAppearanceInactive">@style/TextAppearance.BottomNavigationView.Inactive</item>
        <!-- 선택되지 않은 아이콘 색상 -->
        <item name="itemIconTint">@color/icon_color_selector</item>
        <!-- 선택되지 않은 텍스트 색상 -->
        <item name="itemTextColor">@color/icon_color_selector</item>
    </style>

    <!-- 선택된 메뉴 텍스트 스타일 -->
    <style name="TextAppearance.BottomNavigationView.Active" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- 선택되지 않은 메뉴 텍스트 스타일 -->
    <style name="TextAppearance.BottomNavigationView.Inactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>