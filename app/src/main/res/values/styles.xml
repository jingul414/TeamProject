        <item name="android:textColor">#000000</item>
        <item name="android:lineSpacingExtra">4sp</item> <!-- 추가적인 줄 간격 -->
        <item name="android:lineSpacingMultiplier">1.2</item> <!-- 줄 간격 배율 -->
        <item name="android:fontFamily">@font/noto_sans_black</item>
    </style>
    <style name="start_text_style_main">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:lineSpacingExtra">4sp</item> <!-- 추가적인 줄 간격 -->
        <item name="android:lineSpacingMultiplier">1.2</item> <!-- 줄 간격 배율 -->
    </style>
    <style name="common_btn_v2">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorButtonNormal">#FBCC68</item>
        <item name="android:lineSpacingExtra">12sp</item> <!-- 줄 간격 추가 -->
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:fontFamily">@font/noto_sans_black</item>
    </style>

    <!-- Login -->
    <style name="login_text_style_main">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:lineSpacingExtra">4sp</item> <!-- 추가적인 줄 간격 -->
        <item name="android:lineSpacingMultiplier">1.2</item> <!-- 줄 간격 배율 -->
        <item name="android:fontFamily">@font/noto_sans_black</item>
    </style>

    <style name="login_text_phone_number">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:lineSpacingExtra">12sp</item> <!-- 줄 간격 추가 -->
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:fontFamily">@font/noto_sans_black</item>
    </style>

    <style name="login_text_password">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:lineSpacingExtra">12sp</item> <!-- 줄 간격 추가 -->
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:fontFamily">@font/noto_sans_black</item>
